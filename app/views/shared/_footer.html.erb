<div id="footer"> 
	<% if (@version == "low") %>
		<%= render '/shared/nav/global' %>
		<p class="skip-up hide"><img src="/images/arrow_up.png" class="icon" width="28" height="15" /><a href="#header">Skip to top</a></p>
	<% end %>
	<div id="version-switcher" class="version-switcher">
		<h2 class="heading">Versions:</h2>
		<p class="options"><a href="<%= request.url %>" <% if (@version == "low") %>class="selected" <% end %>onClick="setVersion('low');">Small</a> | <a href="<%= request.url %>"<% if (@version == 'med') %>class="selected" <% end %> onClick="setVersion('med');">Medium</a> | <a href="<%= request.url %>"<% if (@version == 'high') %>class="selected" <% end %> onClick="setVersion('high');">Large</a></p>
	</div>
</div> 		