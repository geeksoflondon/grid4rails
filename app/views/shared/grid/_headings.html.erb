<% @is_single_timeslot = (@timeslots.count == 1) %>
<table id="gridTable" summary="<%= @description %>" cellpadding="0" cellspacing="0" border="0" class="<% if (@is_single_timeslot) %>single-timeslot<% else %>multi-timeslot<% end %>"> 
	<tr> 
		<th>&nbsp;</th> 
		<% @timeslots.each do | timeslot | %>
			<th class="timeslot">
				<p>
					<% if (!@is_single_timeslot) %><a href="/grid/<%= timeslot.id %>"><% end %>
						<%= timeslot.start.strftime("%A") %><br/>
						<%= timeslot.start.strftime("%H:%M") %>-<%= timeslot.end.strftime("%H:%M") %>
					<% if (!@is_single_timeslot) %></a><% end %>
				</p>
			</th>
		<% end %>
	</tr> 			
	<% if (@is_single_timeslot) %>		
		<%= render 'shared/grid/single' %>
	<% else %>
		<%= render 'shared/grid/multi' %>
	<% end %>
</table>