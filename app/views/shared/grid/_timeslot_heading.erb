<% if (@version == "low" && @page_id != "room") %>
	<p class="day"><%= @timeslot.start.strftime("%A") %></p>
<% elsif (@page_id == "room") %>
	<p class="context"><% if (@timeslot.on_now?) %>Now<% else %>Next<% end %></p>
<% end %>
<p class="time">
	<% if (@version == "low" && !@is_single_timeslot) %>
		<a href="<%= url_for :controller => "grid", :action => "show", :timeslot => @timeslot.id, :date => @date %>">
	<% end %>
	<%= @timeslot.start.strftime("%H:%M") %>-<%= @timeslot.end.strftime("%H:%M") %>
	<% if (@version == "low" && !@is_single_timeslot) %>
		</a>
	<% end %>
</p>