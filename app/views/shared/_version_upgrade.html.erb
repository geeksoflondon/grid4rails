<div class="message versions-flash">
	<p>Which version would you prefer?</p>
	<div class="options">
		<p class="option small<% if (cookies[:version] == 'small') %> selected<% end %>">			
			<a href="/versions/small">
				<img src="/images/themes/default/icons/version/small.png" alt="Phone" /><br />
				<span class="title">Small</span>
			</a>
		</p>
		<p class="option medium<% if (cookies[:version] == 'medium') %> selected<% end %>">
			<a href="/versions/medium">
				<img src="/images/themes/default/icons/version/medium.png" alt="Tablet" /><br />
				<span class="title">Medium</span>
			</a>
		</p>
		<p class="option large<% if (cookies[:version] == 'large') %> selected<% end %>">
			<a href="/versions/large">
				<img src="/images/themes/default/icons/version/large.png" alt="Monitor" /><br />
				<span class="title">Large</span>
			</a>	
		</p>
	</div>
</div>