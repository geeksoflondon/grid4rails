<head>  
	<meta charset="UTF-8"> 
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
	
	<title>Griddy</title>
	
	<!-- Style -->	
	<% if (cookies[:version] == "high") %> 
			<%= stylesheet_link_tag "global", "screen/shared", "screen/med", "screen/high" %>
	<% elsif (cookies[:version] == "med") %>
			<%= stylesheet_link_tag "global", "screen/shared", "screen/med" %>
	<% else  %>
			<%= stylesheet_link_tag "global", "screen/shared", "screen/low"  %>
	<% end  %>
	
	<!-- CSRF -->
	<%= csrf_meta_tag %>
	
	<!-- Script -->
	<% 
		cookies[:avail] = false
		if (cookies[:avail] != "true")
			cookies[:avail] = "true"		
		end	
	%>
	<%= javascript_include_tag :defaults %>
		
	<meta name="description" content="">
	<meta name="author" content=""> 
	<meta name="viewport" content="width=device-width, initial-scale=1.0"> 
</head> 
<body> 	
	<div id="header">
		<h1 class="heading page-title"><a href="/"><span class="hide">Griddy</span></a></h1>
		<span class="spacer">&nbsp;</span>		
		<ul class="nav">
			<li<% if (request.request_uri == url_for(:action => 'now', :controller => 'grid')) %> class="selected"<% end %>><%= link_to "Now", grid_now_path unless @talks_taking_place %></li>
			<li<% if (request.request_uri == url_for(:action => 'next', :controller => 'grid')) %> class="selected"<% end %>><a href="/grid/next">Next</a></li>
			<li<% if (request.request_uri == url_for(:action => 'index', :controller => 'grid')) %> class="selected"<% end %>><a href="/grid">View Grid</a></li>
			<li<% if (request.request_uri == url_for(:action => 'new', :controller => 'talks')) %> class="selected"<% end %>><a href="/talks/new">Add Talk</a></li>
			<li><a href="/feedback">Feedback</a></li>
		</ul>
		<% if (cookies[:avail] == "true") %>
			<div class="version-switcher">
				<h2 class="heading">Versions <span class="skip">[<a href="#header-end">skip</a>]</span></h2>
				<p class="options"><a href="<%= url_for() %>" <% if (cookies[:version] != 'med' && cookies[:version] != 'high') %>class="selected" <% end %>onClick="setVersion('low');">Bare</a> | <a href="<%= url_for() %>"<% if (cookies[:version] == 'med') %>class="selected" <% end %> onClick="setVersion('med');">Simple</a> | <a href="<%= url_for() %>"<% if (cookies[:version] == 'high') %>class="selected" <% end %> onClick="setVersion('high');">Shiny</a></p>
			</div>
		<% end %>
		<span id="header-end"></span>		
	</div>
