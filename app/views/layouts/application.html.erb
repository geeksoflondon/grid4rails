<head>  
	<meta charset="UTF-8"> 
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
	
	<title>Griddy</title>
	
	<!-- Style -->	
	<% if (@style == "high") %> 			
			<%= stylesheet_link_tag "global", "screen/shared", "screen/med", "screen/high" %>
			<%= stylesheet_link_tag "themes/#{theme}/global", "themes/#{theme}/screen/shared", "themes/#{theme}/screen/med", "themes/#{theme}/screen/high" %>			
	<% elsif (@style == "med") %>			
			<%= stylesheet_link_tag "global", "screen/shared", "screen/med" %>
			<%= stylesheet_link_tag "themes/#{theme}/global", "themes/#{theme}/screen/shared", "themes/#{theme}/screen/med" %>			
	<% else  %>						
			<%= stylesheet_link_tag "global", "screen/shared", "screen/low"  %>
			<%= stylesheet_link_tag "themes/#{theme}/global", "themes/#{theme}/screen/shared", "themes/#{theme}/screen/low"  %>						
	<% end  %>
	
	<!-- CSRF -->
	<%= csrf_meta_tag %>	
	
	
	<meta name="description" content="">
	<meta name="author" content=""> 
	<meta name="viewport" content="width=600, initial-scale=1, maximum-scale=1"> 
</head> 
<body id="<%= @page_id %>">
<%= render 'shared/header' %>
	<div id="main">
		<%= render '/shared/notice' %>
		<%= yield %>
	</div>
	<%= render 'shared/footer' %>
	</body> 
</html>