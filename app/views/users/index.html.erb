<div class="users">
	<h1 class="heading">All Users</h1>	
	<% if (@users.count > 0) %>
		<table>
			<tr>
				<th><p>Email</p></th>
				<th><p>Name</p></th>
				<th><p>Website</p></th>
				<th colspan="3"><p>Options</p></th>		
			</tr>			
			<% @users.each do |user| %>
				<tr class="user">
					<td class="email"><p><%= user.email %></p></td>
					<td class="name"><p><%= user.name %></p></td>
					<td class="website"><p><%= user.website %></p></td>
					<td class="option"><p><%= link_to 'Show', user %></p></td>
					<td class="option"><p><%= link_to 'Edit', edit_user_path(user) %></p></td>
					<td class="option"><p><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></p></td>
				</tr>
			<% end %>
		</table>
	<% else %>
		<p>Looks like there's no-one here at the moment.</p>
	<% end %>
</div>

<p class="options">
	<%= link_to 'Add User', new_user_path %>
</p>