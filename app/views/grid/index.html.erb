<!--The Grid-->
<h1>View the grid</h1> 
<table summary="List of all the talks at Barcamp 2011" id="gridTable" cellpadding="5"> 
	<thead> 
		<tr> 
			<td>&nbsp;</td> 
			<% @timeslots.each do |timeslot| %>
				<th><%= timeslot.start.strftime("%H:%M") %> <%= timeslot.end.strftime("%H:%M") %></th>
			<% end %>
		</tr> 
	</thead> 
	<tbody>		
	<% @rooms.each do |room| %>
		<tr> 
			<th class="room"><%= room.name %></th>
			<% room.slots.each do |slot| %>
			<td> 
				<h2><%= slot.talk.title unless slot.talk.nil? %><%= "Empty" if slot.talk.nil? %></h2> 
				<h3><%= slot.talk.speaker unless slot.talk.nil? %></h3> 
			</td> 
		<% end %>
		</tr>
	<% end %>
	</tbody> 
</table>