<h1>Listing slots</h1>

<table>
  <tr>
    <th>Session</th>
    <th>Room</th>
    <th>Talk</th>
  </tr>

<% @slots.each do |slot| %>
  <tr>
    <td><%= slot.timeslot['name'] %></td>
    <td><%= slot.room['name'] %></td>
    <td><%= unless slot.talk.nil?
				slot.talk['title']
			else
				"No Talk Yet"
			end
		%></td>
  </tr>
<% end %>
</table>

