<div class="rooms">
	<h1 class="heading">All Rooms</h1>
	<% if (@rooms.count > 0) %>
		<table>
			<tr>
				<th><p>Name</p></th>
				<th><p>Description</p></th>
				<th colspan="3"><p>Options</p></th>
			</tr>
			<% @rooms.each do |room| %>
				<tr class="room">
					<td><p><%= room.name %></p></td>
					<td><p><%= room.description %></p></td>
					<td><p><%= link_to 'Show', room %></p></td>
					<td><p><%= link_to 'Edit', edit_room_path(room) %></p></td>
					<td><p><%= link_to 'Destroy', room, :confirm => 'Are you sure?', :method => :delete %></p></td>
				</tr>
			<% end %>
		</table>			
	<% else %>
		<p>Where's it all happening?</p>
	<% end %>
</div>

<p class="options">
	<%= link_to 'Add Room', new_room_path %>
</p>